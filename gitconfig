[alias]
  ci = commit
  st = status
  co = checkout
  cob = checkout -b
  d = diff
  ps = push
  pl = pull
  m = merge
  ms = merge --squash
  b = branch
  rb = rebase
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  db = branch -d
  ctags = !.git/hooks/ctags
  delete-remote = "!sh -c 'git push origin :$0'"
  p = "!sh -c 'git push ${@/--yolo/-f}'"
  dc = diff --cached
  ro = !git fetch origin --prune && git reset --hard origin/master
  cp = cherry-pick
  lp = log -p
